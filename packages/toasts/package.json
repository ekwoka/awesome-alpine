{
  "name": "@awesome-alpine/toasts",
  "version": "0.0.1-alpha.0",
  "private": true,
  "description": "Simple Toast Manager",
  "author": {
    "name": "Eric Kwoka",
    "email": "ninjatheory@gmail.com",
    "url": "https://thekwoka.net/"
  },
  "repository": "github:ekwoka/awesome-alpine",
  "keywords": ["utilities", "alpine", "toasts"],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "typescript": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist", "src"],
  "type": "module",
  "sideeffects": false,
  "scripts": {
    "build": "vite build",
    "coverage": "vitest run --coverage",
    "lint": "run-s lint:*",
    "lint:biome": "biome check --write ./**/src/**/*.{json,js,ts,astro}",
    "lint:prettier": "prettier --write ./**/src/**/*.{json,mdx,html,css}",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/alpinejs": "3.13.11",
    "alpinejs": "3.14.6"
  },
  "lint-staged": {
    "*.{json,js,ts,astro}": ["biome check --write"],
    "*.{mdx,html,css}": ["prettier --write"]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true
  },
  "peerDependencies": {
    "alpinejs": ">=3.0.0"
  },
  "optionalDependencies": {}
}
