{
  "name": "@awesome-alpine/htma",
  "version": "0.0.1-alpha.1",
  "private": true,
  "description": "HTMX but for Alpine",
  "author": {
    "name": "Eric Kwoka",
    "email": "ninjatheory@gmail.com",
    "url": "https://thekwoka.net/"
  },
  "repository": "github:ekwoka/awesome-alpine",
  "keywords": ["utilities"],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "typescript": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist", "src"],
  "type": "module",
  "sideeffects": false,
  "scripts": {
    "build": "vite build",
    "coverage": "vitest run --coverage",
    "lint": "run-s lint:*",
    "lint:biome": "biome check --apply ./**/src/**/*.{json,js,ts,astro}",
    "lint:prettier": "prettier --write ./**/src/**/*.{json,mdx,html,css}",
    "prebuild": "rm -rf dist",
    "size": "node scripts/esbuild.js",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/alpinejs": "3.13.10",
    "@types/alpinejs__intersect": "3.13.4",
    "@types/alpinejs__morph": "3.13.4",
    "alpinejs": "3.14.0"
  },
  "lint-staged": {
    "*.{json,js,ts,astro}": ["biome check --apply"],
    "*.{mdx,html,css}": ["prettier --write"]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true
  },
  "peerDependencies": {
    "alpinejs": ">=3.0.0"
  },
  "optionalDependencies": {
    "@alpinejs/intersect": "3.14.0",
    "@alpinejs/morph": "3.14.0"
  }
}
