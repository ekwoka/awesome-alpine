{
  "name": "awesome-alpine",
  "version": "0.0.1-alpha",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "doctor": "run-s lint test:run build size",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --fix ./**/src/**/*.ts",
    "lint:prettier": "prettier --write ./**/src/**/*.{html,ts,css}",
    "lint:staged": "lint-staged",
    "precommit": "run-s lint:staged build size",
    "prepare": "husky install",
    "size": "node scripts/getSize.js",
    "size:test": "NODE_ENV=test node scripts/getSize.js",
    "test": "vitest",
    "test:run": "vitest --run",
    "postinstall": "patch-package",
    "netlify": "netlify dev"
  },
  "devDependencies": {
    "@milahu/patch-package": "6.4.14",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/node": "20.11.19",
    "@typescript-eslint/eslint-plugin": "7.0.2",
    "@typescript-eslint/parser": "7.0.2",
    "esbuild": "0.20.1",
    "eslint": "8.56.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "netlify-cli": "17.17.0",
    "npm-run-all2": "6.1.2",
    "postcss": "8.4.35",
    "prettier": "3.2.5",
    "pretty-bytes": "6.1.1",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vite": "5.1.4",
    "vite-plugin-dts": "3.7.3",
    "vite-plugin-external-deps": "0.0.3",
    "vite-plugin-workspace-source": "0.0.3",
    "vitest": "1.3.1"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "pnpm": {
    "overrides": {
      "typescript@<5.3.3": "5.3.3",
      "semver@<7.5.4": ">=7.5.4",
      "happy-dom@>9.1.9": "9.1.9",
      "@babel/traverse@<7.23.2": ">=7.23.2",
      "esbuild@<0.20.0": ">=0.20.0",
      "@esbuild/android-arm@<0.20.0": ">=0.20.0",
      "@esbuild/android-arm64@<0.20.0": ">=0.20.0",
      "@esbuild/android-x64@<0.20.0": ">=0.20.0",
      "@esbuild/darwin-arm64@<0.20.0": ">=0.20.0",
      "@esbuild/darwin-x64@<0.20.0": ">=0.20.0",
      "@esbuild/freebsd-arm64@<0.20.0": ">=0.20.0",
      "@esbuild/freebsd-x64@<0.20.0": ">=0.20.0",
      "@esbuild/linux-arm@<0.20.0": ">=0.20.0",
      "@esbuild/linux-arm64@<0.20.0": ">=0.20.0",
      "@esbuild/linux-ia32@<0.20.0": ">=0.20.0",
      "@esbuild/linux-loong64@<0.20.0": ">=0.20.0",
      "@esbuild/linux-mips64el@<0.20.0": ">=0.20.0",
      "@esbuild/linux-ppc64@<0.20.0": ">=0.20.0",
      "@esbuild/linux-riscv64@<0.20.0": ">=0.20.0",
      "@esbuild/linux-s390x@<0.20.0": ">=0.20.0",
      "@esbuild/linux-x64@<0.20.0": ">=0.20.0",
      "@esbuild/netbsd-x64@<0.20.0": ">=0.20.0",
      "@esbuild/openbsd-x64@<0.20.0": ">=0.20.0",
      "@esbuild/sunos-x64@<0.20.0": ">=0.20.0",
      "@esbuild/win32-arm64@<0.20.0": ">=0.20.0",
      "@esbuild/win32-ia32@<0.20.0": ">=0.20.0",
      "@esbuild/win32-x64@<0.20.0": ">=0.20.0",
      "vite@<5.1.3": ">=5.1.3"
    }
  }
}
