{
  "name": "awesome-alpine",
  "version": "0.0.1-alpha",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "doctor": "run-s lint test:run build size",
    "lint": "run-s lint:*",
    "lint:biome": "biome check --apply ./**/src/**/*.{json,js,ts,astro}",
    "lint:prettier": "prettier --write ./**/src/**/*.{json,mdx,html,css}",
    "lint:staged": "lint-staged",
    "precommit": "run-s lint:staged build size",
    "prepare": "husky",
    "sandbox": "vite ./sandbox",
    "serve": "pnpm run --filter www dev",
    "size": "node scripts/getSize.js",
    "size:test": "NODE_ENV=test node scripts/getSize.js",
    "test": "vitest",
    "test:run": "vitest --run",
    "postinstall": "patch-package",
    "netlify": "netlify dev"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@ekwoka/alpine-testing-library-utilities": "0.0.1-alpha.2",
    "@milahu/patch-package": "6.4.14",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/alpinejs": "3.13.10",
    "alpinejs": "3.14.0",
    "esbuild": "0.21.4",
    "happy-dom": "14.12.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.5",
    "netlify-cli": "17.25.0",
    "npm-run-all2": "6.2.0",
    "postcss": "8.4.38",
    "prettier": "3.3.0",
    "pretty-bytes": "6.1.1",
    "sharp": "0.33.4",
    "tailwindcss": "3.4.3",
    "testing-library-alpine": "0.0.1-alpha.2",
    "typescript": "5.4.5",
    "vite": "5.2.12",
    "vite-plugin-dts": "3.9.1",
    "vite-plugin-external-deps": "0.0.3",
    "vite-plugin-workspace-source": "0.0.3",
    "vitest": "1.6.0",
    "vitest-environment-alpine": "0.0.2-alpha.2"
  },
  "lint-staged": {
    "*.{json,js,ts,astro}": ["biome check --apply"],
    "*.{mdx,html,css}": ["prettier --write"]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true
  },
  "pnpm": {
    "overrides": {
      "esbuild": "$esbuild",
      "sharp": "$sharp",
      "typescript": "$typescript",
      "vite": "$vite",
      "vitest": "$vitest",
      "happy-dom": "$happy-dom"
    }
  }
}
