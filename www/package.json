{
  "name": "@awesome-alpine/www",
  "version": "0.0.1-alpha",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "doctor": "run-s lint test:run build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --fix ./src/**/*.ts",
    "lint:prettier": "prettier --write ./src/**/*.{html,ts,css}",
    "test": "vitest",
    "test:run": "vitest --run",
    "build-site": "vite build",
    "dev": "vite --open --force"
  },
  "devDependencies": {
    "@types/alpinejs": "3.13.6",
    "@types/alpinejs__persist": "3.13.3",
    "@types/node": "20.11.19",
    "autoprefixer": "10.4.17",
    "esbuild": "0.20.0",
    "esbuild-wasm": "0.20.0",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "vite": "5.1.3",
    "vite-plugin-dts": "3.7.2",
    "vite-plugin-external-deps": "0.0.3",
    "vite-plugin-workspace-source": "0.0.3",
    "vitest": "1.3.0"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "dependencies": {
    "@alpinejs/persist": "3.13.5",
    "@ekwoka/alpine-history": "0.2.0",
    "alpinejs": "3.13.5",
    "monaco-editor": "0.46.0"
  }
}
