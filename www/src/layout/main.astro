---
import '../styles.css';
interface Props {
  title: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title} - AwesomeAlpine</title>
    <script>
      import Alpine from 'alpinejs';

      window.Alpine = Alpine;
    </script>
  </head>
  <body class="w-full min-h-screen bg-neutral-900 flex flex-col">
    <slot />
    <script is:inline type="module">
      window.Alpine.start();
    </script>
  </body>
</html>
