---
import '../styles.css';
import LeftPanel from '../components/organisms/left-panel.astro';
import Logo from '../components/atoms/logo.astro';
interface Props {
  frontmatter: {
    title: string;
  };
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.frontmatter.title} - AwesomeAlpine</title>
  </head>
  <body
    class="flex min-h-full flex-col bg-white dark:bg-gray-950 max-w-[100vw]">
    <div class="flex flex-col lg:flex-row w-full max-w-full min-h-screen">
      <LeftPanel class="lg:min-w-[16rem]">
        <div class="relative lg:w-48 mr-8">
          <div>
            <a
              href="/"
              class="text-blue-200 flex gap-4 items-center tracking-widest text-sm">
              <Logo class="w-8 h-8" /> Awesome Alpine
            </a>
          </div>
          <h1
            class="mt-8 font-display text-2xl/tight tracking-wide leading-relaxed text-white">
            Make your project <span class="text-sky-300">Awesome</span> with
            <span class="text-sky-300">Alpine</span>
          </h1>
        </div>
      </LeftPanel>

      <div class="p-16 grow-[4]">
        <article class="prose dark:prose-invert w-full dark:tracking-wider">
          <h1>{Astro.props.frontmatter.title}</h1>
          <slot />
        </article>
      </div>
    </div>
    <script>
      import Alpine from 'alpinejs';
      Alpine.start();
    </script>
  </body>
</html>
