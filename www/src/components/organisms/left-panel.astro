---
import { cn } from '../../lib/utilities/classNames';
import BlurryGlow from '../molecules/blurry-glow.astro';
interface Props {
  class?: string;
}
---

<div class="relative grow shrink-0 px-6 lg:pr-0 max-w-full">
  <BlurryGlow />
  <div class="h-full flex justify-center lg:justify-end lg:items-start">
    <div
      class={cn(
        `sticky top-0 flex lg:min-w-[32rem] lg:overflow-y-auto lg:overflow-x-hidden lg:pl-[max(4rem,calc(50%-38rem))]`,
        Astro.props.class,
      )}>
      <div
        class="mx-auto max-w-lg lg:mx-0 lg:flex lg:max-w-none lg:flex-col lg:before:flex-1 lg:before:pt-6">
        <div class="pb-16 pt-20 sm:pb-20 sm:pt-32 lg:py-20">
          <slot />
        </div>
      </div>
    </div>
  </div>
</div>
